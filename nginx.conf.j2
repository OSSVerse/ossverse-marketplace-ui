server {
	listen 8080;
	server_name _ http2;

	resolver 8.8.8.8 8.8.4.4 valid=300s;
	resolver_timeout 5s; 

	gzip on;
	gzip_proxied any;
	gzip_types
		text/css
		text/javascript
		application/javascript
		application/json
    text/xml
		text/json;

	location / {
		proxy_pass http://localhost:3000/;
#		auth_basic_user_file /etc/nginx/.htpasswd;
#    	auth_basic "Access restricted";
	}

	location /assets/ {
		proxy_pass http://localhost:3000/assets/;
	}

}
